{
    "name": "spydr97/php-cli-table",
    "description": "A simple library to create clean table outputs in PHP CLI scripts",
    "license": ["MIT"],
    "type": "library",
    "scripts": {
        "fix-phpcs": "./vendor/bin/phpcbf --ignore=vendor --standard=spydr97  --extensions=php .",
        "test-phpcs": "./vendor/bin/phpcs --ignore=vendor --standard=spydr97  --extensions=php --colors ."
    },
    "autoload": {
        "psr-4": {
            "Spydr97\\PhpCliTable\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "spydr97/phpcs": "^1.0.1"
    }
}
